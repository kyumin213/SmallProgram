.one-show{
  width: 100%;
  box-sizing:border-box;
}

.img-con{
  width: 100%;
  /* height: 342rpx; */
  background-size: contain;
  margin-top: 128rpx;
}
.img-items{
  display: flex;
   align-items: center; 
   justify-content: center; 
}

.items{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  background-size: contain;
}
.lists{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #eee;
   box-sizing: border-box;
}

.list-item{
  width: 48%;
  margin:10rpx 10rpx 0 10rpx;
  background: #fff;
  padding:0 12rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}
 .list-item:nth-child(odd){
  margin-right: 0;
} 
.list-imgs{
  margin: 40rpx 0 60rpx 0;
  width: 330rpx;
  height: 264rpx;
  background-size: contain;
  
}
.item{
  display: block;
}
.des{
  /* width: 90%; */
  width: 300rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}
.price{
  font-size: 34rpx;
  color: #f00;
  padding: 24rpx 0 16rpx 0;
  border-bottom: 2rpx solid #eee;
}
.priceend{
  font-size: 26rpx;
}
.sold{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}
.jl,.ys{
  font-size: 26rpx;
  color: #B4B4B4;
}

