          <text class='yb'>元宝</text>
          <view class='ybprice'>
            <text>2030</text>
          </view>
          <view class='ybtab flex'>
            <!-- <image></image> -->
            <view class='transfer flex'>
              <image src='/images/wallet-money.png' class='money-icon'></image>
              <text>转赠元宝</text>
            </view>
            <view class='exchange flex'>
              <image src='/images/wallet-cart.png' class='money-icon'></image>
              <text>兑换商品</text>
            </view>
          </view>
        </view>
      </view>
      <view class="{{jyuanbao?'show':'hidden'}} wallet-yb">
