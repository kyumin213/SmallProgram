<view>
  <view class='wallet-head' style="background-image:url('/images/wallet-header.png');background-size:cover;">
    <view class='wallet-tab'>
      <view class="{{award?'wallet-tableft':''}}" bindtap='award'>推广奖</view>
      <view class="{{yuanbao?'wallet-tableft':''}}" bindtap='yuanbao'>元宝</view>
      <view class="{{jyuanbao?'wallet-tableft':''}}" bindtap='jyuanbao'>金元宝</view>
    </view>
    <view>
      <view class="{{award?'show':'hidden'}} wallet-yb">
        <view class='ybshow' style="background:url('/images/walletbg.png') no-repeat;background-size:contain">
          <text class='yb'>元宝</text>
          <view class='ybprice'>
            <text>2030</text>
          </view>
          <view class='ybtab'>
            <!-- <image></image> -->
            <view class='recom'>
              <image src='/images/wallet-money.png' class='money-icon'></image>
              <text class='extend'>金元宝回购</text>
            </view>

          </view>
        </view>
      </view>
      <view class="{{yuanbao?'show':'hidden'}} wallet-yb">
