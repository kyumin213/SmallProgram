<!--pages/test/me/loginpwd/loginpwd.wxml-->
<!--修改密码  -->
<view class='modpwd'>
  <form bindsubmit="formSubmit">
    <view class='oldpwd'>
      <image class='mimaicon' src='/images/icon_pw.png'></image>
      <input name='oldpwd' placeholder-class='phcolor' password='true' class='pwdinp' placeholder='请输入旧密码'></input>
    </view>
    <view class='newpwd'>
      <image class='mimaicon' src='/images/icon_pw.png'></image>
      <input name='newpwd' placeholder-class='phcolor' password='true' class='pwdinp' placeholder='请输入新密码'></input>
    </view>
    <view class='againpwd'>
      <image class='mimaicon' src='/images/icon_msg.png'></image>
      <input name='pwdinp' placeholder-class='phcolor' password='true' class='pwdinp' placeholder='请再次输入新密码'></input>
    </view>
    <view class='submitbtn'>
      <button formType="submit" class='sub'>确定</button>
    </view>
  </form>
</view>