/* pages/test/me/me.wxss */
page{
  height: 100%;
}
.me-con {
  background-color: #F5F5F5;
  height: 100%;
}
.head{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  background-size: cover;
}

.head-title {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  background-color: #666;
  padding: 55rpx 0;
  position: relative;
}

.head-img {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  margin-left: 40rpx;
}

.head-nickname {
  display: inline-block;
  margin-left: 40rpx;
  font-size: 26rpx;
  line-height: 56rpx;
  color: #fff;
}

.member {
  margin-left: 30rpx;
  color: #d9b564;
}
.setting{
  position: absolute;
  top: 20rpx;
  right: 40rpx;
}
.sign-out{
  color: #fff;
  font-size: 30rpx;
}
/* .setting-img{
  width: 46rpx;
  height: 46rpx;
  background-size: cover;
} */

.my-order {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  margin-top: 18rpx;
  background-color: #fff;
}

.viewall{
  color: #ADADAD;
}
.orderlist {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 18rpx;
  padding: 20rpx 0;
}

.listicon {
  width: 68rpx;
  height: 68rpx;
}

.lists {
  width: 20%;
}

.wait {
  display: block;
}

.account {
  background: #fff;
  align-items: center;
  justify-content: flex-start;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  position: relative;
}
.account::after{
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-top: 2px solid #ccc;
  border-right: 2px solid #ccc;
  right: 40rpx;
  transform: rotate(45deg);
  top: 30rpx;
}

.myicon {
  width: 56rpx;
  height: 56rpx;
}

.myitems {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding-left: 50rpx;
}

.itemicon {
  line-height: 38rpx;
  margin-right: 30rpx;
}

.account:nth-child(6) {
  border-bottom: none;
}
